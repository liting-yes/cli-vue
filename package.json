{
  "name": "@liting-yes/cli",
  "private": false,
  "version": "0.0.0",
  "type": "module",
  "description": "Integration of some development shortcuts",
  "author": "liting-yes <luz.liting@gmail.com>",
  "license": "MIT",
  "homepage": "https://github.com/dev-standard/liting-cli#readme",
  "keywords": [
    "cli",
    "liting"
  ],
  "files": [
    "dist"
  ],
  "bin": {
    "liting": "./dist/main.mjs"
  },
  "scripts": {
    "dev": "vtui dev",
    "build": "vtui build",
    "lint": "eslint .",
    "format": "eslint --fix .",
    "commit": "git-cz",
    "prepare": "npx simple-git-hooks"
  },
  "dependencies": {
    "@vue/runtime-core": "^3.3.4",
    "vue": "^3.3.4",
    "vue-router": "^4.2.1",
    "vue-termui": "^0.0.19"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^0.38.6",
    "@commitlint/cli": "^17.6.3",
    "@commitlint/config-conventional": "^17.6.3",
    "@commitlint/cz-commitlint": "^17.5.0",
    "@types/node": "^18.16.13",
    "@vitejs/plugin-vue": "^3.2.0",
    "@vue-termui/cli": "^0.0.17",
    "@vue/compiler-sfc": "^3.3.4",
    "commitizen": "^4.3.0",
    "eslint": "^8.40.0",
    "inquirer": "8",
    "lint-staged": "^13.2.2",
    "simple-git-hooks": "^2.8.1",
    "typescript": "^4.9.5",
    "unplugin-auto-import": "^0.11.5",
    "unplugin-vue-components": "^0.22.12",
    "vite": "^3.2.6",
    "vite-plugin-vue-termui": "^0.0.12"
  },
  "config": {
    "commitizen": {
      "path": "@commitlint/cz-commitlint"
    }
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged",
    "commit-msg": "npx commitlint  --edit ''"
  },
  "lint-staged": {
    "*": "eslint --fix"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  }
}